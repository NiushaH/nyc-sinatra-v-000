<h2>Create New Landmark</h2>

<!-- add content here -->
<form action="/pets" method="POST">

  <input type="text" name="landmark[name]" id="landmark_name">
  <input type="text" name="landmark[year_completed]" id="year_completed">

  <br>
  <p>Select an existing figure or create a new one below.</p>

  <h3>Existing Figures</h3>
  <% @figures.each do |owner| %>
    <input type="checkboxes" name="figures[figure_id]" id="<%= figures.id %>" value="<%= figures.id %>"><%= figures.name %><br>
  <% end %>
  <br>

  <h3>New Figure</h3>
  <label>Figure Name: </label>
  <br>
  <input type="text" name="figures[name]" id="figures_name"></input>
  <br><br>

  <input type="submit" value="Create Landmark">
</form>


